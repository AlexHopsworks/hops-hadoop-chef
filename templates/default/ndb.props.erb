
com.mysql.clusterj.connectstring = <%= @ndb_connectstring %> 
com.mysql.clusterj.database = <%= node[:hadoop][:db] %>
com.mysql.clusterj.connection.pool.size = <%= node[:ndb][:num_ndb_slots_per_client] %>
com.mysql.clusterj.max.transactions = 1024

io.hops.session.pool.size=10
io.hops.session.reuse.count=1000

se.sics.hop.metadata.ndb.mysqlserver.data_source_class_name = com.mysql.jdbc.jdbc2.optional.MysqlDataSource
se.sics.hop.metadata.ndb.mysqlserver.host = <%= @mysql_host %>
se.sics.hop.metadata.ndb.mysqlserver.port = <%= node[:ndb][:mysql_port] %>
se.sics.hop.metadata.ndb.mysqlserver.username = <%= node[:mysql][:user] %>
se.sics.hop.metadata.ndb.mysqlserver.password = <%= node[:mysql][:password] %>
se.sics.hop.metadata.ndb.mysqlserver.connection_pool_size = 10

#size of the session pool. should be altreat as big as the number of active Tx in the system
se.kth.hop.session.pool.size = 1000
#Session is reused n times and then it is GCed
se.kth.hop.session.reuse.count = 5000

